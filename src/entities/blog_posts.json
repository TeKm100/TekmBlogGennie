
{
  "name": "blog_posts",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["user_id", "title", "content", "status", "created_at"],
        "properties": {
          "user_id": {
            "bsonType": "string",
            "description": "User ID who created the blog post"
          },
          "title": {
            "bsonType": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Blog post title"
          },
          "content": {
            "bsonType": "string",
            "minLength": 1,
            "description": "Full blog post content"
          },
          "excerpt": {
            "bsonType": "string",
            "maxLength": 300,
            "description": "Blog post excerpt/summary"
          },
          "topic": {
            "bsonType": "string",
            "description": "Original topic used for generation"
          },
          "status": {
            "bsonType": "string",
            "enum": ["draft", "published", "archived"],
            "description": "Blog post status"
          },
          "word_count": {
            "bsonType": "int",
            "minimum": 0,
            "description": "Word count of the content"
          },
          "tags": {
            "bsonType": "array",
            "items": {
              "bsonType": "string"
            },
            "description": "Blog post tags"
          },
          "edit_history": {
            "bsonType": "array",
            "items": {
              "bsonType": "object",
              "properties": {
                "edited_at": {
                  "bsonType": "string",
                  "title": "datetime"
                },
                "changes": {
                  "bsonType": "string"
                }
              }
            },
            "description": "Edit history tracking"
          },
          "created_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Last update timestamp"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
