
{
  "name": "user_preferences",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["user_id", "created_at", "updated_at"],
        "properties": {
          "user_id": {
            "bsonType": "string",
            "description": "User ID linked to sub_project_user_account"
          },
          "theme": {
            "bsonType": "string",
            "enum": ["light", "dark", "auto"],
            "description": "UI theme preference"
          },
          "language": {
            "bsonType": "string",
            "description": "Preferred language"
          },
          "email_notifications": {
            "bsonType": "bool",
            "description": "Email notification preference"
          },
          "newsletter": {
            "bsonType": "bool",
            "description": "Newsletter subscription preference"
          },
          "content_style": {
            "bsonType": "string",
            "enum": ["professional", "casual", "technical", "creative"],
            "description": "Preferred content writing style"
          },
          "default_word_count": {
            "bsonType": "int",
            "minimum": 300,
            "maximum": 3000,
            "description": "Default word count for blog posts"
          },
          "created_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Preferences creation time"
          },
          "updated_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Last update time"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
